{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.33/schema.json",
  "app_specific_configuration_path": "$Env:USERPROFILE/applications.json",
  "cross_monitor_move_behaviour": "Insert",
  "window_hiding_behaviour":"Cloak",
  "default_workspace_padding": 3,
  "default_container_padding": 3,
  "remove_titlebar_applications": [
    {
      "kind": "Exe",
      "id": "wt.exe",
      "matching_strategy": "Equals"
    }
  ],
  "floating_applications": [
    {
      "kind": "Exe",
      "id": "explorer.exe",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Exe",
      "id": "quick-picture-viewer.exe",
      "matching_strategy": "Equals"       
    },
    {
      "kind": "Exe",
      "id": "obs64.exe",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Title",
      "id": "Privacy and Network Access Policy",
      "matching_strategy": "Contains"
    },
    {
      "kind": "Title",
      "id": "File Converter",
      "matching_strategy": "Contains"
    },
    {
      "kind": "Exe",
      "id": "StartAllBackCfg.exe",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Exe",
      "id": "Photoshop.exe",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Exe",
      "id": "Illustrator.exe",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Exe",
      "id": "PicView.exe",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Title",
      "id": "Screenbox",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Exe",
      "id": "prismlauncher.exe",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Exe",
      "id": "Yasb_themes.exe",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Exe",
      "id": "ResourceHacker.exe",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Exe",
      "id": "fdm.exe",
      "matching_strategy": "Equals"       
    }
  ],
  "ignore_rules": [
    {
      "kind": "Exe",
      "id": "Yasb.exe",
      "matching_strategy": "Equals"
    }
  ],
  "border_overflow_applications": [
    {
      "kind": "Exe",
      "id": "fdm.exe",
      "matching_strategy": "Equals"
    }
  ],
  "mouse_follows_focus": false,
  "transparency": true,
  "transparency_alpha": 220,
  "transparency_ignore_rules": [
    {
      "kind": "Title",
      "id": "YouTube",
      "matching_strategy": "Contains"
    },
    {
      "kind": "Title",
      "id": "Picture",
      "matching_strategy": "Contains"
    },
    {
      "kind": "Title",
      "id": "Media Player",
      "matching_strategy": "Contains"
    },
    {
      "kind": "Exe",
      "id": "obs64.exe", 
      "matching_strategy": "Equals"
    },
    {
      "kind": "Exe",
      "id": "Illustrator.exe",
      "matching_strategy": "Equals"
    }
  ],
  "animation": {
    "enabled":true,
    "fps": 165,
    "duration": 400,
      "style": {
        "movement":"EaseOutBack",
        "transparency": "Linear"
      }
  },
  "border": false,
  "border_implementation": "Komorebi",
  "border_style": "Rounded",
  "border_width": 2,
  "border_colours": {
    "single": "#94e2d5",
    "unfocused": "#45475a",
    "floating": "#fab387",
    "stack": "#cba6f7"
  },  
  "stackbar": {
    "height": 25,
    "mode": "Never",
    "tabs": {
      "width": 125,
      "focused_text": "#74c7ec",
      "unfocused_text": "#cdd6f4",
      "background": "#1e1e2e",
      "font_family": "JetBrainsMono Nerd Font",
      "font_size": 14
    }
  },
  "monitors": [
    {
      "workspaces": [
        {
          "name": "I",
          "layout": "BSP",
          "workspace_rules": [
            {
              "kind": "Exe",
              "id": "zen.exe",
              "matching_strategy": "Equals"       
            }
          ]
        },
        {
          "name": "II",
          "layout": "BSP",
          "workspace_rules": [
          ]
        },
        {
          "name": "III",
          "layout": "BSP",
          "workspace_rules":[
          ]
        },
        {
          "name": "IV",
          "workspace_rules":[

          ]
        },
        {
          "name": "V"
        }
      ]
    }
  ]
}
